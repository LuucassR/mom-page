generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Cotizacion {
  id                      Int      @id @default(autoincrement())
  marca                   String
  modelo                  String
  anio                    String
  version                 String
  es0km                   Boolean
  tieneGNC                Boolean
  userId                  Int      @unique
  createdAt               DateTime @default(now())
  User                    User     @relation(fields: [userId], references: [id])
}

model User {
  id         Int         @id @default(autoincrement())
  nombre     String
  email      String      @unique
  telefono   String
  createdAt  DateTime    @default(now())
  Cotizacion Cotizacion?
}
